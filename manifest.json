{
  "manifest_version": 2, "name": "Email Checker Pro", "version": "1.3.0",
  "description": "Отображает количество непрочитанных писем и их предпросмотр.",
  "icons": {"16":"assets/icon-16.png","32":"assets/icon-32.png","48":"assets/icon-48.png","96":"assets/icon-96.png","128":"assets/icon-128.png"},
  "permissions": ["identity","storage","alarms","tabs", "https://www.googleapis.com/*","https://accounts.google.com/*","https://oauth2.googleapis.com/*","https://login.yandex.ru/*","https://oauth.yandex.ru/*","https://mail.yandex.net/*"],
  "browser_action": {"default_icon":{"16":"assets/icon-16.png","32":"assets/icon-32.png"},"default_title":"Email Checker Pro","default_popup":"popup/index.html"},
  "background": {"scripts":["background/index.js"],"persistent":false},
  "browser_specific_settings": {"gecko":{"id":"email-checker-pro-history@example.com"}}
}
